{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "src",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "system",
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "ES2016",
      "es5",
      "dom"
    ],
    "types": [
      "html-to-image"
    ],
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
